{% extends 'backOffice/base.html.twig' %}

{% block title %}Catégories index{% endblock %}

{% block body %}
    <h1>Catégories index</h1>
    {% for category in categories %}
        <td>{{category.id}}</td>
        <td>title {{category.title}}</td>
    <a href="{{ path('view_category', {'id': category.id}) }}">show</a>
       <form method="post" action="{{ path('delete_category', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this category?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn">Delete</button>
</form>


    {% endfor %}
   

{% endblock %}
