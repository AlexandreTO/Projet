{% extends 'backOffice/base.html.twig' %}

{% block title %}Catégories index{% endblock %}

{% block body %}
	<div class="container">
		<h1>Catégories index</h1>
		<a class=" btn btn-primary " href="{{ path('add_category') }}">Ajouter Catégorie</a>
		<hr/>

		{% for category in categories %}
			<td>title {{category.title}}</td>
			<td>
				<form method="post" action="{{ path('delete_category', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this category?');">
					<a href="{{ path('view_category', {'id': category.id}) }}" class="btn btn-primary">Show</a>
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
					<button class="btn btn-danger">Delete</button>
				</form>

			</td>
		{% endfor %}
	</div>


{% endblock %}
