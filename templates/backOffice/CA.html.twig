{% extends 'backOffice/base.html.twig' %}

{% block title %}CA index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Chiffre d'affaire</h1>
        {% set CA = 0 %}
        {% for commande in commandes %}    
            {% if commande.status == 'Pay√©e' %}
                {% for t in commande.content %}
                    {% set CA = CA+ t.product.prix %}
                {% endfor %}
            {% endif %}
        {% endfor %}
        <h3>Chiffre d'affaire total : {{CA}}</h3>
    </div>
{% endblock %}
