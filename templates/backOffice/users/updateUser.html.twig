{% extends "backOffice/base.html.twig" %}
{% block title %}Game Component | Modifications
{% endblock %}

{% block body %}
    <div class="container bg-light">
        {{ form_start(form) }}
        <h1>{{ form_title }}</h1>
        <div class="form-row">
            <div class='form-group col-md-6'>
                {{ form_label(form.lastName) }}
                {{ form_widget(
                    form.lastName,
                    {'attr' : {'class': 'form-control', 'placeholder': 'Nom de famile'}}
                ) }}
                {{ form_errors(form) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.name) }}
                {{ form_widget(
                    form.name,
                    {'attr' : {'class': 'form-control', 'placeholder': 'Prénom'}}
                    ) }}
                    {{ form_errors(form) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.username) }}
                {{ form_widget(
                    form.username,
                    {'attr' : {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}}
                    ) }}
                    {{ form_errors(form) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password) }}
                    {{ form_widget(
                        form.password,
                        {'attr' : {'class': 'form-control', 'placeholder': 'Mot de passe'}}
                        ) }}
                        {{ form_errors(form) }}
                    </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_label(form.email) }}
                {{ form_widget(
                    form.email,
                    {'attr' : {'class': 'form-control', 'placeholder': 'Email'}}
                    ) }}
                    {{ form_errors(form) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.phone) }}
                    {{ form_widget(
                        form.phone,
                    {'attr' : {'class': 'form-control', 'placeholder': 'Téléphone'}}
                    ) }}
                    {{ form_errors(form) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    {{ form_label(form.address) }}
                    {{ form_widget(
                        form.address,
                        {'attr' : {'class': 'form-control', 'placeholder': 'Adresse'}}
                        ) }}
                        {{ form_errors(form) }}
                </div>
                <div class="form-group col-md-4">
                        {{ form_label(form.city) }}
                        {{ form_widget(
                            form.city,
                        {'attr' : {'class': 'form-control', 'placeholder': 'Ville'}}
                        ) }}
                        {{ form_errors(form) }}
                </div>
                  <div class="form-group col-md-4">
                        {{ form_label(form.zipcode) }}
                        {{ form_widget(
                            form.zipcode,
                        {'attr' : {'class': 'form-control', 'placeholder': 'Code Postal'}}
                        ) }}
                        {{ form_errors(form) }}
                </div>
            </div>

                <button type="submit" class="btn btn-primary">Modifier un utilisateur</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}