				<form method="post" action="{{ path('delete_product', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');">
					<button class="btn btn-danger">Supprimer</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
